<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fbbackup"
    android:versionCode="3"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/face_album"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fbbackup.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fbbackup.GetUserInfo" >
        </activity>
        <activity android:name="com.fbbackup.ImageGridActivity" >
        </activity>
        <activity android:name="com.fbbackup.ImageDetailActivity" >
        </activity>
        <activity android:name="com.fbbackup.FriendAlbumListActivity" >
        </activity>
        <activity android:name="com.fbbackup.MyFriendFragmentActivity" >
        </activity>
        <activity android:name="com.fbbackup.UserGuide" >
        </activity>
        <activity android:name="com.fbbackup.TagImageDetailActivity" >
        </activity>
        <!-- For ADMOB -->
;
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" >
    </uses-permission>

</manifest>